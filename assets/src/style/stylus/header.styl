.header {
  font-family: Arial, sans-serif;
  height $heightHeader
  color white
  border-radius 7px 7px 0 0
  display flex
  align-items center
  padding 0px 45px
  &__left {
    flex: 0 0 50px;
    align-items: center;
    margin-right: 15px;
    display flex
    align-items center
  }
  &__right {
    flex 1
  }
  &_blue {
    background #23283c
  }
  &__wrapper {
    display flex
  }
  &__avatar {
    height 50px
    width 50px
    background white
    border-radius 50%
    background-size cover
    background-position center
    background-repeat no-repeat
  }
  &__info {
    &-name {
      margin-bottom 3px
    }
    &-position {
      font-size 12px
      color lightgrey
    }
  }
}